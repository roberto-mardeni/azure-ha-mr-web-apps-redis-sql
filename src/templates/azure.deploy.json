{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Prefix": {
      "type": "string",
      "defaultValue": "hamrwa",
      "metadata": {
        "description": "Prefix to add for all resource names"
      }
    },
    "FirstRegionLocation": {
      "type": "string",
      "allowedValues": [
        "AustraliaCentral",
        "AustraliaCentral2",
        "AustraliaEast",
        "AustraliaSoutheast",
        "BrazilSouth",
        "BrazilSoutheast",
        "CanadaCentral",
        "CanadaEast",
        "CentralIndia",
        "CentralUS",
        "CentralUSEUAP",
        "ChinaEast",
        "ChinaEast2",
        "ChinaNorth",
        "ChinaNorth2",
        "EastAsia",
        "EastUS",
        "EastUS2",
        "EastUS2EUAP",
        "FranceCentral",
        "FranceSouth",
        "GermanyCentral",
        "GermanyNorth",
        "GermanyNortheast",
        "GermanyWestCentral",
        "JapanEast",
        "JapanWest",
        "JioIndiaCentral",
        "JioIndiaWest",
        "KoreaCentral",
        "KoreaSouth",
        "NorthCentralUS",
        "NorthEurope",
        "NorwayEast",
        "NorwayWest",
        "SouthAfricaNorth",
        "SouthAfricaWest",
        "SouthCentralUS",
        "SoutheastAsia",
        "SouthIndia",
        "SwitzerlandNorth",
        "SwitzerlandWest",
        "UAECentral",
        "UAENorth",
        "UKSouth",
        "UKWest",
        "WestCentralUS",
        "WestEurope",
        "WestIndia",
        "WestUS",
        "WestUS2",
        "WestUS3"
      ],
      "defaultValue": "EastUS"
    },
    "SecondRegionLocation": {
      "type": "string",
      "allowedValues": [
        "AustraliaCentral",
        "AustraliaCentral2",
        "AustraliaEast",
        "AustraliaSoutheast",
        "BrazilSouth",
        "BrazilSoutheast",
        "CanadaCentral",
        "CanadaEast",
        "CentralIndia",
        "CentralUS",
        "CentralUSEUAP",
        "ChinaEast",
        "ChinaEast2",
        "ChinaNorth",
        "ChinaNorth2",
        "EastAsia",
        "EastUS",
        "EastUS2",
        "EastUS2EUAP",
        "FranceCentral",
        "FranceSouth",
        "GermanyCentral",
        "GermanyNorth",
        "GermanyNortheast",
        "GermanyWestCentral",
        "JapanEast",
        "JapanWest",
        "JioIndiaCentral",
        "JioIndiaWest",
        "KoreaCentral",
        "KoreaSouth",
        "NorthCentralUS",
        "NorthEurope",
        "NorwayEast",
        "NorwayWest",
        "SouthAfricaNorth",
        "SouthAfricaWest",
        "SouthCentralUS",
        "SoutheastAsia",
        "SouthIndia",
        "SwitzerlandNorth",
        "SwitzerlandWest",
        "UAECentral",
        "UAENorth",
        "UKSouth",
        "UKWest",
        "WestCentralUS",
        "WestEurope",
        "WestIndia",
        "WestUS",
        "WestUS2",
        "WestUS3"
      ],
      "defaultValue": "WestUS2"
    },
    "FirstResourceGroupTemplateUri": {
      "type": "string"
    },
    "SecondResourceGroupTemplateUri": {
      "type": "string"
    }
  },
  "variables": {
    "firstRegionPrefix": "[concat(parameters('Prefix'),'a')]",
    "firstRegionResourceGroupName": "[concat(variables('firstRegionPrefix'),'rg')]",
    "secondRegionPrefix": "[concat(parameters('Prefix'),'b')]",
    "secondRegionResourceGroupName": "[concat(variables('secondRegionPrefix'),'rg')]"
  },
  "functions": [],
  "resources": [
    {
      "name": "[variables('firstRegionResourceGroupName')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('FirstRegionLocation')]",
      "tags": {},
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[variables('firstRegionResourceGroupName')]",
      "resourceGroup": "[variables('firstRegionResourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', variables('firstRegionResourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('FirstResourceGroupTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[variables('firstRegionPrefix')]"
          }
        }
      }
    },
    {
      "name": "[variables('secondRegionResourceGroupName')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('SecondRegionLocation')]",
      "tags": {},
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "[variables('secondRegionResourceGroupName')]",
      "resourceGroup": "[variables('secondRegionResourceGroupName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', variables('secondRegionResourceGroupName'))]",
        "[resourceId('Microsoft.Resources/deployments', variables('firstRegionResourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('SecondResourceGroupTemplateUri')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[variables('secondRegionPrefix')]"
          },
          "sourceDatabaseId": {
            "value": "[reference(concat('Microsoft.Resources/deployments', variables('secondRegionResourceGroupName'))).outputs.databaseId.value]"
          }
        }
      }
    }
  ],
  "outputs": {}
}