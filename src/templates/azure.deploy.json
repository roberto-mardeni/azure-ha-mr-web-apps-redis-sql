    },
    "FirstRegionLocation": {
      "type": "string",
      "allowedValues": [
        "AustraliaCentral",
        "AustraliaCentral2",
        "AustraliaEast",
        "AustraliaSoutheast",
        "BrazilSouth",
        "BrazilSoutheast",
        "CanadaCentral",
        "CanadaEast",
        "CentralIndia",
        "CentralUS",
        "CentralUSEUAP",
        "ChinaEast",
        "ChinaEast2",
        "ChinaNorth",
        "ChinaNorth2",
        "EastAsia",
        "EastUS",
