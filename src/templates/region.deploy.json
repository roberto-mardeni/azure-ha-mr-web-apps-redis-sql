{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "defaultValue": "hamrwa",
      "metadata": {
        "description": "Prefix to add for all resource names"
      }
    }
  },
  "variables": {
    "webAppPlanName": "[concat(parameters('prefix'),'-app-asp')]",
    "webAppName": "[concat(parameters('prefix'),'-app')]",
    "webApiPlanName": "[concat(parameters('prefix'),'-api-asp')]",
    "webApiName": "[concat(parameters('prefix'),'-api')]",
    "redisCacheName": "[concat(parameters('prefix'),'-rc')]"
  },
  "functions": [],
  "resources": [{
      "name": "[variables('redisCacheName')]",
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "Premium",
          "family": "P",
          "capacity": 1
        },
        "redisConfiguration": {},
        "enableNonSslPort": false,
        "redisVersion": "4",
        "replicasPerMaster": 2
      }
    }, {
      "apiVersion": "2018-02-01",
      "name": "[variables('webAppPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "kind": "",
      "tags": {},
      "dependsOn": [],
      "properties": {
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1"
      },
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      }
    }, {
      "apiVersion": "2018-11-01",
      "name": "[variables('webAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {},
      "dependsOn": [
        "[resourceId('Microsoft.Cache/redis', variables('redisCacheName'))]",
        "[resourceId('Microsoft.Web/serverfarms/', variables('webAppPlanName'))]"
      ],
      "properties": {
        "siteConfig": {
          "defaultDocuments": [],
          "appSettings": [
            { 
              "name": "CacheConnection",
              "value": "[concat(variables('redisCacheName'),'.redis.cache.windows.net,abortConnect=false,ssl=true,password=', listKeys(resourceId('Microsoft.Cache/Redis', variables('redisCacheName')), '2015-08-01').primaryKey)]"
            }
          ],
          "metadata": [{
            "name": "CURRENT_STACK",
            "value": "dotnet"
          }],
          "phpVersion": "OFF",
          "netFrameworkVersion": "v4.0",
          "alwaysOn": true
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webAppPlanName'))]",
        "clientAffinityEnabled": true
      }
    },
    {
      "apiVersion": "2018-02-01",
      "name": "[variables('webApiPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "kind": "",
      "tags": {},
      "dependsOn": [],
      "properties": {
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1"
      },
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      }
    }, {
      "apiVersion": "2018-11-01",
      "name": "[variables('webApiName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {},
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', variables('webApiPlanName'))]"
      ],
      "properties": {
        "siteConfig": {
          "defaultDocuments": [],
          "appSettings": [],
          "metadata": [{
            "name": "CURRENT_STACK",
            "value": "dotnet"
          }],
          "phpVersion": "OFF",
          "netFrameworkVersion": "v4.0",
          "alwaysOn": true
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webApiPlanName'))]",
        "clientAffinityEnabled": true
      }
    }
  ],
  "outputs": {}
}