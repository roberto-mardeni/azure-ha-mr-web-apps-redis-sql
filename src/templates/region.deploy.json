{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "defaultValue": "hamrwa",
      "metadata": {
        "description": "Prefix to add for all resource names"
      }
    }
  },
  "variables": {
    "webAppPlanName": "[concat(parameters('prefix'),'-app-asp')]",
    "webAppName": "[concat(parameters('prefix'),'-app')]",
    "webApiPlanName": "[concat(parameters('prefix'),'-api-asp')]",
    "webApiName": "[concat(parameters('prefix'),'-api')]",
    "redisCacheName": "[concat(parameters('prefix'),'-rc')]",
    "dbServerName": "[concat(parameters('prefix'),'-sql')]",
    "databaseName": "DatabaseName",
    "databasePassword": "Password$123"
  },
  "functions": [],
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Sql/servers",
      "location": "[resourceGroup().location]",
      "name": "[variables('dbServerName')]",
      "properties": {
        "administratorLogin": "sysadmin",
        "administratorLoginPassword": "[variables('databasePassword')]",
        "version": "12.0"
      },
      "resources": [
        {
          "apiVersion": "2019-06-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('dbServerName'))]"
          ],
          "location": "[resourceGroup().location]",
          "tags": {},
          "name": "[variables('databaseName')]",
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": 536870912000,
            "zoneRedundant": true,
            "readScale": "Enabled",
            "readReplicaCount": 1
          },
          "sku": {
            "name": "P1",
            "tier": "Premium"
          },
          "type": "databases"
        },
        {
          "apiVersion": "2015-05-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', variables('dbServerName'))]"
          ],
          "location": "[resourceGroup().location]",
          "name": "AllowAllWindowsAzureIps",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          },
          "type": "firewallrules"
        }
      ]
    },
    {
      "name": "[variables('redisCacheName')]",
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2019-07-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "Premium",
          "family": "P",
          "capacity": 1
        },
        "redisConfiguration": {},
        "enableNonSslPort": false,
        "redisVersion": "4",
        "replicasPerMaster": 2
      }
    },
    {
      "apiVersion": "2018-02-01",
      "name": "[variables('webAppPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "kind": "",
      "tags": {},
      "dependsOn": [],
      "properties": {
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1"
      },
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      }
    },
    {
      "apiVersion": "2018-11-01",
      "name": "[variables('webAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {},
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('dbServerName'))]",
        "[resourceId('Microsoft.Cache/redis', variables('redisCacheName'))]",
        "[resourceId('Microsoft.Web/serverfarms/', variables('webAppPlanName'))]"
      ],
      "properties": {
        "siteConfig": {
          "defaultDocuments": [],
          "appSettings": [],
          "connectionStrings": [
            {
              "connectionString": "[concat(variables('redisCacheName'),'.redis.cache.windows.net,abortConnect=false,ssl=true,password=', listKeys(resourceId('Microsoft.Cache/Redis', variables('redisCacheName')), '2015-08-01').primaryKey)]",
              "name": "CacheConnection",
              "type": "RedisCache"
            },
            {
              "connectionString": "[concat('Server=tcp:',reference(variables('dbServerName')).fullyQualifiedDomainName,',1433;Initial Catalog=',variables('databaseName'),';Persist Security Info=False;User ID=',reference(variables('dbServerName')).administratorLogin,';Password=',variables('databasePassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
              "name": "DatabaseConnection",
              "type": "SQLAzure"
            }
          ],
          "metadata": [
            {
              "name": "CURRENT_STACK",
              "value": "dotnet"
            }
          ],
          "phpVersion": "OFF",
          "netFrameworkVersion": "v4.0",
          "alwaysOn": true
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webAppPlanName'))]",
        "clientAffinityEnabled": true
      }
    },
    {
      "apiVersion": "2018-02-01",
      "name": "[variables('webApiPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[resourceGroup().location]",
      "kind": "",
      "tags": {},
      "dependsOn": [],
      "properties": {
        "workerSize": "0",
        "workerSizeId": "0",
        "numberOfWorkers": "1"
      },
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      }
    },
    {
      "apiVersion": "2018-11-01",
      "name": "[variables('webApiName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "tags": {},
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms/', variables('webApiPlanName'))]"
      ],
      "properties": {
        "siteConfig": {
          "defaultDocuments": [],
          "appSettings": [],
          "connectionStrings": [
            {
              "connectionString": "[concat(variables('redisCacheName'),'.redis.cache.windows.net,abortConnect=false,ssl=true,password=', listKeys(resourceId('Microsoft.Cache/Redis', variables('redisCacheName')), '2015-08-01').primaryKey)]",
              "name": "CacheConnection",
              "type": "RedisCache"
            },
            {
              "connectionString": "[concat('Server=tcp:',reference(variables('dbServerName')).fullyQualifiedDomainName,',1433;Initial Catalog=',variables('databaseName'),';Persist Security Info=False;User ID=',reference(variables('dbServerName')).administratorLogin,';Password=',variables('databasePassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]",
              "name": "DatabaseConnection",
              "type": "SQLAzure"
            }
          ],
          "metadata": [
            {
              "name": "CURRENT_STACK",
              "value": "dotnet"
            }
          ],
          "phpVersion": "OFF",
          "netFrameworkVersion": "v4.0",
          "alwaysOn": true
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webApiPlanName'))]",
        "clientAffinityEnabled": true
      }
    }
  ],
  "outputs": {}
}